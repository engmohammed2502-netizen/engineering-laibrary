# إعدادات السيرفر
PORT=5000
NODE_ENV=development

# قاعدة البيانات
MONGODB_URI=mongodb://localhost:27017/engineering_library

# JWT Secret - غيره في الإنتاج!
JWT_SECRET=your_super_secret_key_change_this_in_production

# إعدادات رفع الملفات
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=157286400  # 150MB
MAX_IMAGE_SIZE=3145728   # 3MB للصور

# روابط Frontend
FRONTEND_URL=http://localhost:3000

# إعدادات النسخ الاحتياطي
BACKUP_PATH=/var/backups/engineering-library
BACKUP_RETENTION_DAYS=30

# إعدادات الأمان
LOGIN_ATTEMPTS_LIMIT=5
ACCOUNT_LOCK_TIME=24  # ساعات
